<div class="container mt-3">
  <h3>Transaction Logs</h3>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Transaction ID</th>
        <th>Order</th>
        <th>User ID</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Memo</th>
        <th>Confirmed</th>
        <th>Solana Transaction</th>
      </tr>
    </thead>
    <tbody>
      <% @transaction_logs.each do |log| %>
        <tr>
          <td><%= log.solana_tx.truncate(20) %></td>
          <td><%= log.order_id %></td>
          <td><%= log.user_id %></td>
          <td><%= log.amount %> SOL</td>
          <td><%= log.status %></td>
          <td><%= log.memo %></td>
          <td><%= log.confirmed_at.strftime("%y-%m-%d") %></td>
          <td>
            <%= link_to log.solana_tx.truncate(12), "https://solscan.io/tx/#{log.solana_tx}", target: "_blank", rel: "noopener" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if @transaction_logs %>
    <div class="col-lg-12 mt-3 mb-3">
      <div class="d-flex justify-content-between bg-light rounded align-items-center py-3">
        <div class="page_info ms-3 text-black">
          <%= page_entries_info @transaction_logs %>
        </div>
        <% if params[:per_page ].present? %>
          <%= will_paginate @transaction_logs, :params =>  {per_page: @per_page }, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <% else %>
          <%= will_paginate @transaction_logs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
