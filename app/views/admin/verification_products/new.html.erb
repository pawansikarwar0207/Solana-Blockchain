<div class="container mt-5">
  <div class="card shadow">
    <h3 class="card-header text-center">Add New Verification Product</h3>
    <div class="card-body">

      <% if @verification_product.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading">Please correct the following:</h4>
          <ul>
            <% @verification_product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @verification_product, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control mt-1", autocomplete: "off" %>
        </div>

        <div class="mb-3">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control mt-1", autocomplete: "off" %>
        </div>

        <div class="mb-3">
          <%= f.label :price %>
          <%= f.number_field :price, step: 0.00001, class: "form-control mt-1", autocomplete: "off" %>
        </div>

        <%= f.submit "Create Product", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
