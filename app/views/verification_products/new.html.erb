<div class="container mt-5">
  <h1>Add New Verification Product</h1>

  <%= form_with model: @verification_product, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control mt-1", autocomplete: "off" %>
    </div>

    <div class="mb-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control mt-1", autocomplete: "off" %>
    </div>

    <div class="mb-3">
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.00001, class: "form-control mt-1", autocomplete: "off" %>
    </div>

    <%= f.submit "Create Product", class: "btn btn-primary btn-sm" %>
  <% end %>
</div>
