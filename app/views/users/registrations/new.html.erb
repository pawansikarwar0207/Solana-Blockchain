<div class="col-lg-4 mx-auto mt-3">
  <div class="card shadow">
    <div class="card-header text-center"><h3>Sign up</h3></div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-2 mb-2' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mt-2 mb-2' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mt-2 mb-2' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary mt-2 mb-2' %>
          <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-primary mt-2 mb-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

