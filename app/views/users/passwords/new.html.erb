<div class="col-lg-4 mx-auto mt-3">
  <div class="card shadow">
    <div class="card-header text-center"><h3>Forgot your password?</h3></div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-2 mb-2' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary mt-2 mb-2' %>
        </div>
      <% end %>
      <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-primary mt-2 mb-2' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary mt-2 mb-2' %>
    </div>
  </div>
</div>


